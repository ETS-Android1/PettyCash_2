<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UserPreferences">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="19"
        android:background="@color/gray_light"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="6"
            android:background="@color/red_dark"
            android:paddingHorizontal="30dp"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/outline_arrow_circle_left_white_48"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/preferences_cancel_btn"
                ></androidx.appcompat.widget.AppCompatImageButton>

        </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/preferences"
                style="@style/title_dark"
                android:padding="20dp"
                ></TextView>



            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edit_text_shape_for_line"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_dashboard_customize_24"
                        ></ImageView>


                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/legal_entity"
                                               android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/preferences_legal_layout"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/preferences_legal_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:layout_toLeftOf="@id/preferences_legal_select_btn"
                        android:paddingRight="10dp"
                        android:text="55555555"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        ></TextView>

                    <ImageView
                        android:id="@+id/preferences_legal_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>

                </RelativeLayout>

            </RelativeLayout>

            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edit_text_shape_for_line"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_dashboard_customize_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/business_unit"
                        android:layout_gravity="center_vertical"                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/preferences_business_layout"
                    >


                    <TextView
                        android:id="@+id/preferences_business_select_title"

                        style="@style/normal_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/preferences_business_select_btn"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:textColor="@color/red"></TextView>

                    <ImageView
                        android:id="@+id/preferences_business_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_white_18"></ImageView>
                </RelativeLayout>

            </RelativeLayout>


            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edit_text_shape_for_line"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_dns_24"
                    ></ImageView>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal_dark"
                    android:text="@string/project"
                    android:layout_gravity="center_vertical"                    ></TextView>

            </LinearLayout>

                <RelativeLayout
                    android:id="@+id/preferences_project_layout"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">


                    <TextView
                        android:id="@+id/preferences_project_select_title"
                        style="@style/normal_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/preferences_project_select_btn"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:textColor="@color/red"></TextView>

                    <ImageButton
                        android:id="@+id/preferences_project_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_white_18"></ImageButton>
                </RelativeLayout>
            </RelativeLayout>

            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edit_text_shape_for_line"
                >


            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_account_tree_24"
                    ></ImageView>

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_dark"
            android:text="@string/department"
            android:layout_gravity="center_vertical"            ></TextView>

    </LinearLayout>


                <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/preferences_department_layout"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/preferences_department_select_title"
                    android:textColor="@color/red"
                    style="@style/normal_red"
                    android:layout_toLeftOf="@id/preferences_department_select_btn"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    ></TextView>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/outline_arrow_forward_ios_white_18"
                    android:background="@drawable/circle_btn_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/preferences_department_select_btn"
                    ></ImageButton>
            </RelativeLayout>
            </RelativeLayout>


            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edit_text_shape_for_line"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_dashboard_customize_24"
                        android:visibility="invisible"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/petty_cash_id"
                        android:layout_gravity="center_vertical"                        ></TextView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/preferences_petty_cash_id_layout"

                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/preferences_petty_cash_id_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:paddingRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="1455555"
                        ></TextView>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_arrow_circle_right_black_20"
                        android:layout_alignParentRight="true"
                        android:id="@+id/preferences_petty_cash_id_select_btn"
                        android:background="@drawable/edit_text_shape_for_line"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        ></ImageButton>
                </RelativeLayout>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:padding="20dp"

                >

                <ImageButton
                    android:layout_margin="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:src="@drawable/outline_check_white_24"
                    android:background="@drawable/circle_btn_red"
                    android:id="@+id/preferences_confirm_btn"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"

                    >                </ImageButton>
            </RelativeLayout>




        </LinearLayout>





    <fragment
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/preferences_fragment"
        class="com.example.pettycash.SelectFragment"
        ></fragment>
</RelativeLayout>
