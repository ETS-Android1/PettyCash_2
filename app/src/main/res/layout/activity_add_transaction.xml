<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".AddTransaction">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="21"
        android:background="@color/gray_light"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red_dark"
            android:paddingHorizontal="30dp"
            android:weightSum="6">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/new_transaction_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/outline_arrow_circle_left_white_48"></androidx.appcompat.widget.AppCompatImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:weightSum="13"
            android:orientation="vertical"
            >


            <TextView
                style="@style/title_dark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/create_transaction"

                ></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_calendar_month_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/date"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_date_layout"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/new_transaction_date_text"
                        android:text="22222222222"
                        android:layout_toLeftOf="@id/new_transaction_date_image"
                        android:paddingRight="10dp"
                        style="@style/normal_red"
                       android:gravity="center_vertical"
                        ></TextView>

                    <ImageView
                        android:id="@+id/new_transaction_date_image"

                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_alignParentRight="true"
                        android:src="@drawable/outline_calendar_month_black_36" android:layout_centerInParent="true"
                        ></ImageView>
                </RelativeLayout>

            </RelativeLayout>

          
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_dashboard_customize_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/legal_entity"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/new_transaction_legal_layout"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true">


                    <TextView
                        android:id="@+id/new_transaction_legal_select_title"
                        style="@style/normal_red"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/new_transaction_legal_select_btn"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:textColor="@color/red"></TextView>

                    <ImageView

                        android:id="@+id/new_transaction_legal_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>

                </RelativeLayout>

            </RelativeLayout>

     
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_dashboard_customize_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/business_unit"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_business_layout"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/new_transaction_business_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:layout_toLeftOf="@id/new_transaction_business_select_btn"
                        android:paddingRight="10dp"
                       android:gravity="center_vertical"
                        ></TextView>

                    <ImageView

                        android:id="@+id/new_transaction_business_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>

                </RelativeLayout>

            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_dns_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/project"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_project_layout"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/new_transaction_project_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:layout_toLeftOf="@id/new_transaction_project_select_btn"
                        android:paddingRight="10dp"
                       android:gravity="center_vertical"
                        ></TextView>

                    <ImageView

                        android:id="@+id/new_transaction_project_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>


                </RelativeLayout>
            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_account_tree_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/department"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_department_layout"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/new_transaction_department_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:layout_toLeftOf="@id/new_transaction_department_select_btn"
                        android:paddingRight="10dp"
                       android:gravity="center_vertical"
                        ></TextView>

                    <ImageView

                        android:id="@+id/new_transaction_department_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>


                </RelativeLayout>
            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_dashboard_customize_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/petty_cash_id"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_petty_cash_id_layout"
                    android:visibility="invisible"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/new_transaction_petty_cash_id_select_title"
                        android:textColor="@color/red"
                        style="@style/normal_red"
                        android:layout_toLeftOf="@id/new_transaction_petty_cash_id_select_btn"
                        android:paddingRight="10dp"
                       android:gravity="center_vertical"
                        android:text="5112155"
                        ></TextView>

                    <ImageView

                        android:id="@+id/new_transaction_petty_cash_id_select_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_btn_gray"
                        android:src="@drawable/outline_arrow_forward_ios_10"></ImageView>


                </RelativeLayout>
            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_gavel_24"
                        ></ImageView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/vat"
                       android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/new_transaction_vat_layout"
                    >


                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/new_transaction_vat_switch"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        ></Switch>
                </RelativeLayout>
            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
          android:background="@drawable/edit_text_shape"
>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description_layout"


                    >


                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/normal_dark"
                        android:text="@string/decription"
                       android:layout_gravity="center_vertical"
                        ></TextView>



                </LinearLayout>

<!--<Space-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="20dp"-->
<!--    ></Space>-->
                <RelativeLayout
                    android:id="@+id/new_transaction_decription_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/description_layout"
                    android:padding="10dp">


                    <EditText
                        android:id="@+id/new_transaction_decription_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_shape_for_line"
                        android:hint="@string/type_here"
                        android:padding="10dp"></EditText>


                </RelativeLayout>
            </RelativeLayout> 

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingHorizontal="20dp"
                >

                <ImageButton
                    android:layout_margin="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:src="@drawable/outline_check_white_24"
                    android:background="@drawable/circle_btn_red_light"
                    android:id="@+id/new_transaction_confirm_btn"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"

                    >                </ImageButton>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>





    <fragment
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_transaction_fragment"
        class="com.example.pettycash.SelectFragment"
        ></fragment>


</RelativeLayout>
